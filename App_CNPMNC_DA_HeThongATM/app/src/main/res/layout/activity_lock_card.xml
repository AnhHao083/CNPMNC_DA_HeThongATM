<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LockCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <!--Thong tin the-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:padding="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_credit_card_off_24"
                android:layout_marginEnd="10dp">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Thông tin thẻ"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp">

            </TextView>
        </LinearLayout>



        <!--Spinner loai the-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            style="@style/spinner_style">
            <Spinner
                android:id="@+id/spLoaiThe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown">
            </Spinner>
        </LinearLayout>
        <!--So the-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            style="@style/spinner_style">
            <Spinner
                android:id="@+id/spSoThe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown">
            </Spinner>
        </LinearLayout>

        <Button
            android:id="@+id/btKhoaThe"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="KHÓA THẺ">

        </Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
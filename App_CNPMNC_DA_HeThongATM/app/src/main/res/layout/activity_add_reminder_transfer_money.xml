<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddReminderTransferMoneyActivity"
    android:background="@color/bg_color">

    <!-- Scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Toolbar -->
            <Toolbar
                android:id="@+id/tbToolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_tool_bar"
                android:background="@color/primary_blue_color">
            </Toolbar>

            <!-- Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <!-- Diễn giải -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Diễn giải"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_marginBottom="6dp">
                    </TextView>

                    <!-- Nhập diễn giải -->
                    <EditText
                        android:id="@+id/etContent"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="16dp"
                        android:hint="Nhập lời nhắc"
                        android:padding="16dp"
                        android:background="@drawable/border_radius_all">
                    </EditText>
                </LinearLayout>

                <!-- Ngày hết hạn -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày hết hạn"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_marginBottom="6dp">
                    </TextView>

                    <!-- Nhập ngày hết hạn -->
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="16dp"
                        android:hint="Nhập lời nhắc"
                        android:padding="16dp"
                        android:background="@drawable/border_radius_all">
                    </EditText>
                </LinearLayout>

                <!-- Số tiền cần nhắc -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số tiền cần nhắc"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_marginBottom="6dp">
                    </TextView>

                    <!-- Nhập số tiền cần nhắc -->
                    <EditText
                        android:id="@+id/etMoney"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="16dp"
                        android:hint="Nhập số tiền cần nhắc"
                        android:padding="16dp"
                        android:background="@drawable/border_radius_all">
                    </EditText>
                </LinearLayout>

                <!-- Người thụ hưởng cần nhắc -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvTitleBeneficiary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tài khoản thụ hưởng cần nhắc"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_marginBottom="6dp">
                    </TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Nhập người thụ hưởng -->
                        <EditText
                            android:id="@+id/etBeneficiary"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="16dp"
                            android:hint="Nhập tài khoản thụ hưởng cần nhắc"
                            android:padding="16dp"
                            android:background="@drawable/border_radius_all">
                        </EditText>

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:paddingEnd="16dp"
                            android:paddingTop="12dp"
                            android:paddingStart="12dp"
                            android:paddingBottom="12dp"
                            android:src="@drawable/baseline_supervisor_account_24">
                        </ImageView>
                    </RelativeLayout>
                </LinearLayout>

                <!-- Button tiếp tục -->
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_radius_button"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="12dp"
                    android:text="Tiếp tục">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
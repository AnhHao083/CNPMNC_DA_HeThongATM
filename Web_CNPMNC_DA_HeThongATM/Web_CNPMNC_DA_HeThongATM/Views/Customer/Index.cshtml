@using Web_CNPMNC_DA_HeThongATM.Models.ViewModel
@using PagedList.Mvc;
@using PagedList;
@model KhachHangViewModel
@{
    Layout = "_LayoutMain";
    var custommerList = ViewData["j"] as IPagedList<KhachHangViewModel>;
}
<body>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Danh sách khách hàng</strong>
                <div class="card-search col col-md-8" style="margin-right:100px">
                    <div class="input-group">
                        <input type="text" id="search-input" class="form-control">
                        <div class="input-group-btn">
                            <button class="btn btn-info" id="search-button">
                                <i class="fa fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="table-stats order-table ov-h" id="CustomerList">

                <table class="table">
                    <thead>
                        <tr>
                            <th style="width:10%">Mã</th>
                            <th style="width:15%">Tên</th>
                            <th style="width:15%">NgayTao</th>
                            <th style="width:15%%">Email</th>
                            <th style="width:10%">SDT</th>
                            <th style="width:15%%">Giới Tính</th>
                            <th style="width:20%;text-align:left">Địa chỉ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in custommerList)
                        {

                            
                            <tr>
                                <td>@item.CCCD</td>
                                <td>@item.TenKhachHang</td>
                                <td>@item.NgayTao</td>
                                <td>@item.Email</td>
                                <td>@item.SoDienThoai</td>
                                <td>@item.GioiTinh</td>
                                <td>@item.DiaChi</td>
                            </tr>
                            
                        }
                       
                    </tbody>
                </table>
                <div>
                    Page @(custommerList.PageCount < custommerList.PageNumber ? 0 : custommerList.PageNumber) of @custommerList.PageCount

                    @if (custommerList.HasPreviousPage)
                    {
                        @Html.ActionLink("<<", "Index", new { page = 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                        @Html.ActionLink("<", "Index", new { page = custommerList.PageNumber - 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                    }

                    @if (custommerList.HasNextPage)
                    {
                        @Html.ActionLink(">", "Index", new { page = custommerList.PageNumber + 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                        @Html.ActionLink(">>", "Index", new { page = custommerList.PageCount, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                    }
                </div>
            </div>
            <div class="table-stats order-table ov-h" id="SearchCustomerID">
            </div><!-- /.table-stats -->
        </div>
    </div>
    <script src="/js/ListCustomer.js"></script>
</body>
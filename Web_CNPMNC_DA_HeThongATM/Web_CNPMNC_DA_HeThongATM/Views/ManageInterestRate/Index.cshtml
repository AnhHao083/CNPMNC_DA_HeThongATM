@using Web_CNPMNC_DA_HeThongATM.Models.ViewModel

@model LaiSuatViewModel
@{
    Layout = "_LayoutMain";
    var LaiSuatList = ViewData["LaiSuatList"] as IEnumerable<LaiSuatViewModel>;
}
<body>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Danh sách Lãi suất</strong>
            </div>
            <div class="table-stats order-table ov-h">
                <table class="table ">
                    <thead>
                        <tr>
                            <th style="width:10%">Mã lãi suất</th>
                            <th style="width:15%">Kỳ hạn</th>
                            <th style="width:15%">Tỉ lệ</th>
                            <th style="width:3.2%">Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in LaiSuatList)
                        {
                            <tr>
                            <tr>
                                <td>@item.Key</td>
                                <td>@item.KyHan</td>
                                <td>@item.TiLe</td>
                                <td>
                                    <div class="oxd-table-cell-actions" style="flex: 1 1 0%;">
                                        <button type="button" class="oxd-icon-button">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </button>
                                        <button type="button" class="oxd-icon-button">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            </tr>
                        }
                    </tbody>
                </table>
            </div> <!-- /.table-stats -->
        </div>
    </div>
</body>
﻿@using Web_CNPMNC_DA_HeThongATM.Models.ViewModel

@model TheNganHangViewModel

@{
    Layout = "_LayoutMain";
}
<body>
    <div class="container" >     
        <form method="post" asp-controller="CreditCard" asp-action="EditCardATM" style="padding-top:0px ; background-color:#befeee">
            <div class="inputBox">
                <span>
                   Chỉnh Sửa thẻ
                   
                </span>
               
            </div>
            <div class="flexbox">

                <div class="inputBox">
                    <span>Mã Khách Hàng
                        <i class="fa-solid fa-pen-to-square"></i>
                    </span>
                    <input readonly value="@ViewBag.Details.MaKH" type="text" maxlength="16" id="makhachhang" asp-for="Key">
                </div>
                <div class="inputBox">
                    <span>Tên Khách Hàng
                        <i class="fa-solid fa-pen-to-square"></i>
                    </span>
                    <input readonly value="@ViewBag.TenKhachHang" type="text" maxlength="16" class="tenkhachhang">
                </div>             
            </div>
            <div class="flexbox">
                <div class="inputBox">
                    <span>Ngày Mở Thẻ
                        <i class="fa-solid fa-pen-to-square"></i>
                    </span>
                    <input readonly value="@ViewBag.Details.NgayMoThe" type="text" maxlength="16" class="sdt" asp-for="MaSoThe">
                </div>
                <div class="inputBox">
                    <span>Ngày Hết Hạn
                        <i class="fa-solid fa-pen-to-square"></i>
                    </span>
                    <input value="@ViewBag.Details.NgayHetHan" type="text" maxlength="16" asp-for="NgayMoThe">
                </div>
            </div>
            <div class="flexbox">
                <div class="inputBox">
                    <span>Mã Pin
                        <i class="fa-solid fa-pen-to-square"></i>
                    </span>
                    <input value="@ViewBag.Details.MaPin" type="text" maxlength="16" class="card-number-input" asp-for="MaPin">
                </div>
                <div class="inputBox">
                    <span>Mã Số Thẻ
                        <i class="fa-solid fa-pen-to-square"></i>
                    </span>
                    <input value="@ViewBag.Details.MaSoThe" type="text" class="card-holder-input" asp-for="MaSoThe">
                    
                </div>            
            </div>
            <div class="flexbox">
                <div class="inputBox">
                    <span>
                        Mã Đăng Nhập
                        <i class="fa-solid fa-pen-to-square"></i>
                    </span>
                    <input value="@ViewBag.Details.MaDangNhap" type="text" maxlength="16" class="card-number-input" asp-for="MaPin">
                </div>
                @* <div class="inputBox">
                    <span>
                        Tình trạng thẻ
                        <i class="fa-solid fa-pen-to-square"></i>
                    </span>
                    @if (ViewBag.Details.TinhTrangThe == 0)
                    {
                        <select asp-for="LoaiThe" class="type-card">
                            <option  selected disabled>Chưa Khóa</option>
                            <option value="0">Khóa Thẻ</option>
                            <option value="1">Mở Khóa</option>
                        </select>
                       }
                    else{
                        <select asp-for="LoaiThe" class="type-card">
                            <option  selected disabled>Đã Khóa</option>
                            <option value="0">Khóa Thẻ</option>
                            <option value="1">Mở Khóa</option>
                        </select>
                       }
                        

                </div> *@
            </div>

            <div class="flexbox">
                <a asp-controller="CreditCard" asp-action="ListCard" class="btn btn-danger submit-btn">
                    <i class="fa fa-long-arrow-left"></i> BACK
                </a>
                          
                <input type="submit" value="submit" class="submit-btn">
                
            </div>
           
        </form>

    </div>
</body>



